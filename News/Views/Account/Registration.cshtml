@model News.BL.Models.CreateUserVM


@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>



<br />

<a asp-action="Index" asp-controller="Newss" class="btn btn-primary">Back To News</a>

<br />
<br />

<form enctype="multipart/form-data" class="form-group" asp-action="Registration" asp-controller="Account">


    <br />
    <div asp-validation-summary="All" class="text-danger"></div>
    <br />



    <label asp-for="FullName">Full Name</label>
    <input type="text" class="form-control" asp-for="FullName" />
    <span asp-validation-for="FullName" class="text-daner"></span>
    <br />

    <label asp-for="Email">E-Mail</label>
    <input type="email" class="form-control" asp-for="Email" />
    <span asp-validation-for="Email" class="text-daner"></span>
    <br />

    <label asp-for="Password">Password</label>
    <input type="password" class="form-control" asp-for="Password" />
    <span asp-validation-for="Password" class="text-daner"></span>
    <br />

    <label asp-for="ConfirmPassword">Confirm Password</label>
    <input type="password" class="form-control" asp-for="ConfirmPassword" />
    <span asp-validation-for="ConfirmPassword" class="text-daner"></span>
    <br />





    <center>
        <input type="submit" value="Save" class="btn btn-primary" />
        <input type="reset" value="Cancle" class="btn btn-danger" />
    </center>

</form>


