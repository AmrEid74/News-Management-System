@model News.BL.Models.EditorVM


@{
    ViewData["Title"] = "Details";
}

<h2>Details</h2>



<br />

<a asp-action="Index" asp-controller="Editor" class="btn btn-primary">Back To Editors</a>
<a asp-action="Edit" asp-controller="Editor" asp-route-id="@Model.Id" class="btn btn-success">Edit</a>

<br />
<br />


<form class="form-group">

    <label asp-for="Id">Id</label>
    <input type="text" asp-for="Id" disabled />
    <br />
    <label asp-for="Name">Name</label>
    <input type="text" class="form-control" asp-for="Name" disabled />
    <br />

    <label asp-for="Email">E-mail</label>
    <input type="text" class="form-control" asp-for="Email" disabled />
    <br />
    <label asp-for="Age">Age</label>
    <input type="text" class="form-control" asp-for="Age" disabled />
    <br />

    <label asp-for="Salary">Salary</label>
    <input type="text" class="form-control" asp-for="Salary" disabled />

</form>