

@model IEnumerable<News.BL.Models.NewssVM>


@{
    ViewBag.Title = "Newss";
}

<link href="~/plugins/bootstrap-select/css/bootstrap-select.css" rel="stylesheet" />
<style>
    th {
        text-align: center !important;
    }
</style>
<h2>News</h2>


<a asp-action="Create" asp-controller="Newss" class="btn btn-primary">Add News </a>
<br />  
<br />  
<table class="table table-bordered table-striped table-hover text-center font-weight-bold">
    <tr class="thead-dark">

        <th>Title</th>
        <th>Content</th>
        <th>Category</th>
        <th>Photo</th>
        <th>Update</th>
        <th>Remove</th>
        <th>Details</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Title</td>
            <td>@item.Content</td>
            <td>@item.Categories.CategoryName</td>
            <td><img src="~/Files/Photos/@item.Photo" height="50" width="50" /></td> 



            <td><a asp-action="Edit" asp-controller="Newss" asp-route-id="@item.Id" class="btn btn-success">Update</a></td>
            <td><a asp-action="Delete" asp-controller="Newss" asp-route-id="@item.Id" class="btn btn-danger">Remove</a></td>
            <td><a asp-action="Details" asp-controller="Newss" asp-route-id="@item.Id" class="btn btn-info">Details</a></td>
        </tr>
    }
</table>





